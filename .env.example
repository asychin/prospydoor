# PPCH Configuration

# API Key for authentication (REQUIRED)
PPCH_API_KEY=change-me-in-production

# API Port (default: 8890)
PPCH_PORT=8890

# Prosody URL (internal docker network URL)
PROSODY_URL=http://docker-jitsi-meet-prosody-1:5280

# Jitsi MUC Domain
MUC_DOMAIN=muc.meet.yourdomain.com

# Debug mode (true/false)
DEBUG=false

# Timezone
TZ=UTC

# Docker Compose Configuration
# --------------------------

# Container Name
PPCH_CONTAINER_NAME=ppch

# Restart Policy
PPCH_RESTART_POLICY=unless-stopped

# Networks
# Internal network name (default: jitsi)
PPCH_NETWORK_INTERNAL=jitsi
# External network name (default: jitsi_meet.jitsi)
PPCH_NETWORK_EXTERNAL=jitsi_meet.jitsi

# Healthcheck Configuration
PPCH_HEALTHCHECK_INTERVAL=30s
PPCH_HEALTHCHECK_TIMEOUT=5s
PPCH_HEALTHCHECK_RETRIES=3
PPCH_HEALTHCHECK_START_PERIOD=10s
